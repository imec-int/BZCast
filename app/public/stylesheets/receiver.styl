@import style


.container
	padding 10px

	video
		width 640px
		height 480px

	video.fakefullscreen
		position fixed
		width 100%
		height 100%
		left 0px
		top 0px
		z-index 0

.player
	display block
	font-size 50px
	color green
	.name, .flagcode, .flagname, .score, .killsanddeads
		float left
		padding 10px
		background-color gray
	.name
		font-weight 700
		width 20%
	.flagcode
		width 15%
		text-align center
	.flagname
		width 45%
	.score
		width 7%
		text-align center
	.killsanddeads
		width 13%
		text-align center

.player.dead
	color red
